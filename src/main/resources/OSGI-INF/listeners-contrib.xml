<?xml version="1.0" encoding="UTF-8"?>
<component name="org.nuxeo.ecm.virusscaner.listeners">

  <extension target="org.nuxeo.ecm.core.event.EventServiceComponent"
    point="listener">

    <listener name="vscanListener" async="false" postCommit="false"
      class="org.nuxeo.virusscan.listener.VirusScanSyncListener" order="100">
      <event>documentCreated</event>
      <event>beforeDocumentModification</event>
      <event>aboutToCreate</event>
    </listener>

    <listener name="vscanProcessor" async="true"
      class="org.nuxeo.virusscan.listener.VirusScannerProcessor" order="100">
      <event>virusScanNeeded</event>
    </listener>

  </extension>

</component>
